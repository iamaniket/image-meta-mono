{
  "name": "extension",
  "$schema": "../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "extension/src",
  "projectType": "application",
  "tags": [],
  "// targets": "to see all targets run: nx show project extension --web",
  "targets": {
    "build": {
      "executor": "@nx/vite:build",
      "outputs": ["{options.outputPath}"],
      "options": {
        "outputPath": "dist/extension"
      },
      "configurations": {
        "development": {},
        "production": {
          "mode": "production"
        }
      }
    },
    "serve": {
      "executor": "@nx/vite:dev-server",
      "options": {
        "buildTarget": "extension:build"
      },
      "configurations": {
        "development": {
          "buildTarget": "extension:build:development"
        },
        "production": {
          "buildTarget": "extension:build:production"
        }
      }
    },
    "preview": {
      "executor": "@nx/vite:preview-server",
      "options": {
        "buildTarget": "extension:build"
      },
      "configurations": {
        "development": {
          "buildTarget": "extension:build:development"
        },
        "production": {
          "buildTarget": "extension:build:production"
        }
      }
    },
    "test": {
      "options": {
        "passWithNoTests": true
      }
    }
  }
}
